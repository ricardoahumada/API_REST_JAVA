package bit.es;

import static org.junit.Assert.assertNotNull;
import static org.junit.Assert.assertTrue;

import javax.ws.rs.client.Client;
import javax.ws.rs.client.ClientBuilder;
import javax.ws.rs.client.Invocation;
import javax.ws.rs.client.WebTarget;
import javax.ws.rs.core.MediaType;

import org.junit.Test;

import es.bit.models.Usuario;

public class RESTClientTest {

	@Test
	public void getAllUsersTest() {
		Client client = ClientBuilder.newClient();
		WebTarget webTarget = client.target("http://localhost:8080/TareasProyectosJersey/rest/usuarios/1");
		Invocation.Builder invocationBuilder = webTarget.request(MediaType.APPLICATION_JSON);
		Usuario apiUser = invocationBuilder.get(Usuario.class);
		
		assertNotNull(apiUser);
		assertTrue(apiUser.getUid()==1);
	}

}
